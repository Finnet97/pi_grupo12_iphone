<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/miralo_siteLogo.png" />
	
	<title>Miralo - Watch Store</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- Header -->
  
	<!-- Banner -->
	<div class="banner">
	  <img src="/images/miralo_banner.png" alt="Banner de ofertas">
	</div>
	<!-- Banner -->

	<!-- Productos -->
	<div class="container products-wrapper">
	  <div class="row">
		<div class="col-12">
		  <h2 class="products-title">Productos</h2>
		</div>
  
		<% for (let i = 0; i < productos.length; i++) { %>
		  <div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
			  <a href="/product/<%= productos[i].id %>">
				<figure class="product-box_image">
				  <img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
				</figure>
				<article class="product-box_data">
				  <h2><%= productos[i].nombre %></h2>
				  <p><%= productos[i].descripcion.substring(0, 90) %>...</p>
				  <p>
					Subido por:
					<a href="/user/profile/<%= productos[i].usuario.id %>">
					  <%= productos[i].usuario.email %>
					</a>
				  </p>
				</article>
			  </a>
			</section>
		  </div>
		<% } %>
	  </div>
	</div>
  
	<!-- Footer -->
	<%- include('partials/footer') %>
	<!-- Footer -->
</body>  
</html>